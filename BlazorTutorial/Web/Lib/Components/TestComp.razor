@implements IMouseCallbacks
@implements IKeyCallbacks

<div tabindex onmousedown=@OnMouseDown onmouseup=@OnMouseUp>TestComp</div>

@code {
    
    [Parameter]
    public string Id { get; set; }
    
    [Parameter]
    public IReceivable Context { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        Context?.Receive(this);
    }

    public virtual string TestString { get; set; }
    
    public virtual Action<MouseEventArgs> OnMouseDown { get; set; }
    public virtual Action<MouseEventArgs> OnMouseUp { get; set; }
    public virtual Action<MouseEventArgs> OnKeyUp { get; set; }
    public virtual Action<MouseEventArgs> OnKeyDown { get; set; }
}